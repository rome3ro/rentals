<% @cities.each do |city| %>
  <tr>
    <td><%= city.nombre %></td>
    <td><%= city.state_id %></td>
    <td><%= link_to t('Show'), city %></td>
    <td><%= link_to t('Edit'), edit_city_path(city) %></td>
    <td><%= link_to t('Destroy'), city, confirm: t('Are you sure?'), method: :delete %></td>
