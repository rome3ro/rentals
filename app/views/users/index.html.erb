<h1>Listing users</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Address</th>
    <th>Phone</th>
    <th>Cellphone</th>
    <th>City</th>
    <th>Birthday</th>
    <th>Gender</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.code %></td>
    <td><%= user.name %></td>
    <td><%= user.address %></td>
    <td><%= user.phone %></td>
    <td><%= user.cellphone %></td>
    <td><%= user.city.nombre if user.city %></td>
    <td><%= user.birthday %></td>
    <td><%= user.gender.description if user.gender %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

