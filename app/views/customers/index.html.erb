<h1><%=t :Customers%></h1>
<table class="tabla">
  <tr>
    <th><%=t :Code %></th>
    <th><%=t :Name %></th>
    <th><%=t :Address%></th> 
    <th></th>
    <th></th>
    <th></th>
  </tr>
<%= form_for(:customer, :url => { :action => "index" }, :html => {:method => :get} ) do |f| %>
<tr>
    <td><%= f.text_field :code, :class => "small" %></td>
    <td><%= f.text_field :name, :class => "extralarge" %></td>
    <td><%= f.text_field :address, :class => "large" %></td>
    <td>&nbsp;</td>
    <td><%= link_to t("Export"), params.merge(:format => :csv), :class => "filter_link" %></td>
    <td><%= f.submit t("Filter"), :class => "submit" %></td>
  </tr>
<% end %>
<%= paginate @customers %>
<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.code %></td>
    <td><%= customer.name %></td>
    <td><%= customer.address %></td>
    <td><%= link_to t('Show'), customer %></td>
    <td><%= link_to t('Edit'), edit_customer_path(customer) %></td>
    <td><%= link_to t('Destroy'), customer, confirm: t('Are you sure?'), method: :delete %></td>
  </tr>

<% end %>
</table>

<br />

<%= link_to t('New'), new_customer_path, :class => "filter_link" %>