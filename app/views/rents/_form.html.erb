<%= form_for(@rent) do |f| %>
  <% if @rent.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rent.errors.count, "error") %> prohibited this rent from being saved:</h2>

      <ul>
      <% @rent.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<br/>
<div id="custom_msg">	
</div>
<h2>Cliente</h2>
  <div class="field">	
    <%= f.autocomplete_field :customer_code_name, autocomplete_customer_name_rents_path, :size => 50, :id_element =>
'#rent_customer_id' %><br/>		  
	<%= f.hidden_field :customer_id %>	
	<%= f.hidden_field :user_id, :value => "#{current_user.id}" %>
  </div>		
<h2>Pel√≠culas</h2>
<a href="#" class="add">Agregar</a>
  <div class="container">
	<% @contador=0 %>
    <%= f.nested_fields_for :rent_details do |f| %>
      <fieldset class="item">
	
		<div class="field">
       		<%= f.autocomplete_field :movie_code_name, autocomplete_movie_name_rent_details_path, :size => 50 %> 			
		<span class="item_details">
			<%= f.hidden_field :movie_id %>
						
			<%= f.label :movie_kind %>
			<%= f.hidden_field :movie_kind_id %>
			
			<span class="rent_price_label"> 
				<%= f.label :rent_price_id %>				
			</span>
			<span class="rent_price_value"> 
			<%= f.collection_select(:rent_price_id, @rent_prices, :id, :price) %>			
			</span>
			<span class="deliver_date_label"> 
				<%= f.label :deliver_date %>				
			</span>
			<span class="deliver_date_value"> 
				<%= f.date_select :deliver_date %> 
			</span>
		</span>
			<a href="#" class="remove">quitar</a>
	        <%= f.hidden_field :id %>
			<%= f.hidden_field :_destroy %>
		</div>
		
		
      </fieldset>
	<% @contador=@contador+1 %>
    <% end %>
  </div>
<br/>
  <div class="totals">
	<%= f.label :total %>	
    <%= f.text_field :total, :readonly => true, :size => 20 %>
  </div>
<br/>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
