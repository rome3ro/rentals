<% @deal_details.each do |deal_detail| %>
  <tr>
    <td><%= deal_detail.moviekind_id %></td>
    <td><%= deal_detail.price %></td>
    <td><%= deal_detail.days %></td>
    <td><%= deal_detail.weekday %></td>
    <td><%= deal_detail.surcharge %></td>
    <td><%= link_to 'Show', deal_detail %></td>
    <td><%= link_to 'Edit', edit_deal_detail_path(deal_detail) %></td>
