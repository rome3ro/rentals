<h1>Listing weekdays</h1>

<table>
  <tr>
    <th>Dayname</th>
    <th>Daynumber</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @weekdays.each do |weekday| %>
  <tr>
    <td><%= weekday.dayname %></td>
    <td><%= weekday.daynumber %></td>
    <td><%= link_to 'Show', weekday %></td>
    <td><%= link_to 'Edit', edit_weekday_path(weekday) %></td>
    <td><%= link_to 'Destroy', weekday, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

