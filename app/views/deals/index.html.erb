<h1><%=t :Deals %></h1>

<table  class="tabla">
  <tr>
    <th><%=t :Name%></th>
    <th><%=t :Description%></th>
    <th><%=t :Weekday%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @deals.each do |deal| %>
  <tr>
    <td><%= deal.name %></td>
    <td><%= deal.description %></td>
    <td><%= deal.weekday.dayname if deal.weekday %></td>
    <td><%= link_to t('Show'), deal %></td>
    <td><%= link_to t('Edit'), edit_deal_path(deal) %></td>
    <td><%= link_to t('Destroy'), deal, confirm: t('Are you sure?'), method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('New'), new_deal_path, :class => "filter_link"  %>
